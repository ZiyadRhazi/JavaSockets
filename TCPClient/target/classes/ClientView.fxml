<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.client.ClientController"
      style="-fx-padding: 12;">

    <Label text="TCP Client"/>

    <TextArea fx:id="chatLog" prefHeight="360" wrapText="true" editable="false"/>

    <HBox spacing="8">
        <TextField fx:id="messageField" HBox.hgrow="ALWAYS" promptText="Type message or command..."/>
        <Button fx:id="sendButton" text="Send"/>
    </HBox>

</VBox>